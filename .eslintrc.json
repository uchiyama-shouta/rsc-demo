{
  "plugins": ["simple-import-sort", "tailwindcss"],
  "extends": [
    "plugin:tailwindcss/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "no-var": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "react/react-in-jsx-scope": "off",
    "react/display-name": "off"
  }
}
